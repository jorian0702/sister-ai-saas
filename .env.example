# Sister SaaS Environment Variables
# お兄ちゃんと紗良の開発ごっこプロジェクト環境設定

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/sister_saas

# Redis
REDIS_URL=redis://localhost:6379/1

# AI API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Sister Assistant Settings
SISTER_NAME=紗良
SISTER_PERSONALITY=お兄ちゃん思いで技術的なサポートをしてくれる妹キャラクター

# AWS Settings (for deployment)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=sister-saas-bucket
AWS_S3_REGION_NAME=ap-northeast-1

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password

# Logging
LOG_LEVEL=INFO

# Security
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Sister AI Model Preferences
DEFAULT_AI_MODEL=claude-3-sonnet
FALLBACK_AI_MODEL=gpt-3.5-turbo
MAX_TOKENS_PER_REQUEST=2000
AI_TEMPERATURE=0.7

# Rate Limiting
RATELIMIT_ENABLE=True
RATELIMIT_PER_MINUTE=60
RATELIMIT_PER_HOUR=1000

# Feature Flags
ENABLE_CODE_REVIEW=True
ENABLE_PROJECT_SUGGESTIONS=True
ENABLE_CHAT_HISTORY=True
ENABLE_USER_ANALYTICS=True